class Point:
    def __init__(self, x=0, y=0):
        self.x = x
        self.y = y
    # Static method â†’ utility: distance between two points
    @staticmethod
    def distance(p1, p2):
        dx = p1.x - p2.x
        dy = p1.y - p2.y
        return (dx**2 + dy**2) ** 0.5

